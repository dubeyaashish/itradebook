# Alerts (profit_ratio increase triggers)
# Toggle alerts background evaluator
ALERTS_ENABLED=true
# Polling interval in seconds
ALERTS_POLL_SEC=30
# Cooldown window to avoid duplicate alerts (minutes)
ALERTS_COOLDOWN_MIN=5
# Alert delivery method and URLs
# Use GET by default and attach payload as a query parameter
ALERT_METHOD=GET
# Outbound GET URL (if not set, falls back to ALERT_POST_URL)
# Query parameter name to carry payload (CSV string)
ALERT_GET_PARAM=q
# If true, do not append any query parameter; just call <base>/<symbol>
ALERT_PATH_ONLY=true
# (Optional) Outbound POST URL (used if ALERT_METHOD=POST)
ALERT_GET_URL=/api/alerts
# First field sent in alert payload is fixed constant (string)
ALERT_POST_CONST=0.5
# Optional Authorization header for the POST (e.g., Bearer token)
ALERT_POST_AUTH=
# Verbose logging for each evaluation pass
ALERTS_LOG_VERBOSE=false

